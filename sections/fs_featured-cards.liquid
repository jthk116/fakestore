{{ 'fs_featured-cards.css' | asset_url | stylesheet_tag }}

<h1>fs featured cards</h1>

<script src="{{ 'fs_featured-cards.js' | asset_url }}" defer></script>

{% schema %}
{
    "name": "FS Featured Cards",
    "class": "fs-featured-cards",
    "settings": [
        {
            "type": "text",
            "id": "hero_heading",
            "label": "Hero Heading",
            "default": "IN STORES & ONLINE"
        },
        {
            "type": "text",
            "id": "hero_title",
            "label": "Hero Title",
            "default": "50% OFF EVERYTHING"
        },
        {
            "type": "color",
            "id": "hero_text_color",
            "label": "Hero Text Color",
            "default": "#FFFFFF"
        },
        {
            "type": "image_picker",
            "id": "hero_image",
            "label": "Hero Image",
            "info": "Recommended size: 2560x650px, Compressed .jpg"
        }
    ],
    "blocks": [
        {
            "name": "Featured Card 1",
            "type": "card_1",
            "settings": [
                {
                    "type": "header",
                    "content": "Content for Card 1"
                },
                {
                    "type": "text",
                    "id": "card_1_title",
                    "label": "Card 1 Title",
                    "default": "NEW ARRIVALS"
                },
                {
                    "type": "text",
                    "id": "card_1_subtitle",
                    "label": "Card 1 Subtitle",
                    "default": "Our latest Summer styles. Fresh. Fun. Fabulous."
                },
                {
                    "type": "image_picker",
                    "id": "card_1_image",
                    "label": "Image",
                    "info": "Size: 650x650px, Compressed .jpg"
                }
            ],
            "limit": 1
        },
        {
            "name": "Card 1 Link",
            "type": "card_1_link",
            "settings": [
                {
                    "type": "header",
                    "content": "Link to add to Card 1"
                },
                {
                    "type": "text",
                    "id": "hero_cta_text",
                    "label": "Card 1 Link Text"
                },
                {
                    "type": "url",
                    "id": "card_1_url",
                    "label": "Card 1 URL"
                }
            ],
            "limit": 4
        },
        {
            "name": "Featured Card 2",
            "type": "card_2",
            "settings": [
                {
                    "type": "header",
                    "content": "Content for Card 2"
                },
                {
                    "type": "text",
                    "id": "card_2_title",
                    "label": "Card 2 Title",
                    "default": "COLLEGE BOUND"
                },
                {
                    "type": "text",
                    "id": "card_2_subtitle",
                    "label": "Card 2 Subtitle",
                    "default": "New places and new faces. Same great style."
                },
                {
                    "type": "image_picker",
                    "id": "card_2_image",
                    "label": "Image",
                    "info": "Size: 650x650px, Compressed .jpg"
                }
            ],
            "limit": 1
        },
        {
            "name": "Card 2 Link",
            "type": "card_2_link",
            "settings": [
                {
                    "type": "header",
                    "content": "Link to add to Card 2"
                },
                {
                    "type": "text",
                    "id": "hero_cta_text",
                    "label": "Card 2 Link Text"
                },
                {
                    "type": "url",
                    "id": "card_2_url",
                    "label": "Card 2 URL"
                }
            ],
            "limit": 4
        }
    ],
    "presets": [
        { 
            "name": "FS Featured Cards",
            "blocks": [
                {
                    "type": "card_1"
                },
                {
                    "type": "card_2"
                }
            ]
        }
    ]
}
{% endschema %}